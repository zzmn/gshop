$green = #02a774;
$yellow = #F5A100;
$bc = #e4e4e4;

// 根据像素比来使用 2x 3x 图
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
    
// 清除浮动
clearFix()
  *zoom 1
  &::after
    content: ''
    display: block
    clear: both
    
// 字数过多显示省略号
ellipsis()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

// 居中
center() 
  display: flex
  justify-content: center
  align-items: center
